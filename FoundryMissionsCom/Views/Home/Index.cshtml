@using FoundryMissionsCom.Models.FoundryMissionModels

@{
    ViewBag.Title = "";
}

@section opengraph{
    <meta property="og:title" content="Star Trek Online Foundry Missions Database" />
    <meta property="og:description" content="Search or add your own Star Trek Online foundry missions"/>
    }


<div class="container">
    <div class="jumbotron">
        <figure class="bannerimage">
            <img src="@Url.Content("~/Content/Images/banner.png")" alt="Star Trek Online Foundry Mission Database">
        </figure>
    </div>

    <article>
        <section class="missions col-md-6">
            <header><h2>Random Missions</h2></header>
            <ul class="list-group">
                @foreach (Mission mission in ViewBag.RandomMissions)
                {
                    <li class="list-group-item mission">@Html.ActionLink(mission.Name, "details", "missions", new { link = mission.MissionLink }, new { } ) - By: @Html.ActionLink(mission.Author.CrypticTag, "search", "missions", new { q = mission.Author.CrypticTag }, new { }) - @mission.Faction</li>
                }
            </ul>
        </section><!-- Missions -->
        <section class="missions col-md-6">
            <header><h2>Recently Updated Missions</h2></header>
            <ul class="list-group">
                @foreach (Mission mission in ViewBag.RecentlyUpdatedMissions)
                {
                    <li class="list-group-item mission">@Html.ActionLink(mission.Name, "details", "missions", new { link = mission.MissionLink }, new { }) - By: @Html.ActionLink(mission.Author.CrypticTag, "search", "missions", new { q = mission.Author.CrypticTag }, new { }) - @mission.Faction</li>
                }
            </ul>
        </section>
    </article>
</div>
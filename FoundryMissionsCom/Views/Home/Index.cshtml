@using FoundryMissionsCom.Models.FoundryMissionModels

@{
    ViewBag.Title = "Home Page";
}


<div class="container">
    <div class="jumbotron">
        <figure class="bannerimage">
            <img src="@Url.Content("~/Content/Images/logo4.png")" alt="Star Trek Online Foundry Mission Database">
        </figure>
    </div>

    <article>
        <section class="missions col-md-6">
            <header><h2>Random Missions</h2></header>
            <ul class="list-group">
                @foreach (Mission mission in ViewBag.RandomMissions)
                {
                    <li class="list-group-item">@Html.ActionLink(mission.Name, "Details", "Missions", new { id = mission.Id }, new { } ) - By: @Html.ActionLink(mission.Author.UserName, "Details", "Authors", new { username = mission.Author.UserName }, new { }) - @mission.Faction</li>
                }
            </ul>
        </section><!-- Missions -->
        <section class="missions col-md-6">
            <header><h2>Recently Updated</h2></header>
            <ul class="list-group">
                @foreach (Mission mission in ViewBag.RecentlyUpdatedMissions)
                {
                    <li class="list-group-item">@Html.ActionLink(mission.Name, "Details", "Missions", new { id = mission.Id }, new { }) - By: @Html.ActionLink(mission.Author.UserName, "Details", "Authors", new { username = mission.Author.UserName }, new { }) - @mission.Faction</li>
                }
            </ul>
        </section>
    </article>
</div>